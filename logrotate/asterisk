/var/log/asterisk/messages /var/log/asterisk/*_log {
    missingok
    compress
    sharedscripts
    create 0640 root adm
    postrotate
        /usr/sbin/asterisk -rnx 'logger reload'
    endscript
}

/var/log/asterisk/cdr-csv/*.csv {
    monthly
    rotate 12
    missingok
    compress
    sharedscripts
    create 0640 root adm
    postrotate
        /usr/sbin/asterisk -rnx 'logger reload'
    endscript
}
